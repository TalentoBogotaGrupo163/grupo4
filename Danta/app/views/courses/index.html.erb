<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Initial date</th>
      <th>Final date</th>
      <th>Cost</th>
      <th>Location</th>
      <th>Entity</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.initial_date %></td>
        <td><%= course.final_date %></td>
        <td><%= course.cost %></td>
        <td><%= course.location.neighborhood %> - <%= course.location.zone %></td>
        <td><%= course.entity.name %></td>
        <td><%= course.person.name %></td>
        <td><%= link_to 'Show', course %></td>
        <% if signed_in? %>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

